/** @var \Mageplaza\BetterMaintenance\Block\Clock $block */

$clockStyle = $block->getClockStyle();
if ($clockStyle !== 'simple') {
    $clockBackgroundColor = $block->getClockBgColor();
}
$clockNumberColor     = $block->getClockNumberColor();
$template             = $block->getClockTemplate($clockStyle);
$timerId              = uniqid('', false);

if (!empty($template)) : ?>
    <div id="mp-countdown-timer-<?= /* @noEscape */ $timerId ?>">
        <?= /* @noEscape */ $template ?>
    </div>
    <style type="text/css">
        #mp-countdown-timer-<?= /* @noEscape */ $timerId ?> .mp-countdown-txt,
        #mp-countdown-timer-<?= /* @noEscape */ $timerId ?> .mp-countdown-days,
        #mp-countdown-timer-<?= /* @noEscape */ $timerId ?> .mp-countdown-hours,
        #mp-countdown-timer-<?= /* @noEscape */ $timerId ?> .mp-countdown-minutes,
        #mp-countdown-timer-<?= /* @noEscape */ $timerId ?> .mp-countdown-seconds {
            color: <?= /* @noEscape */ $clockNumberColor ?>;
        }

        <?php if ($clockStyle === 'circle' || $clockStyle === 'square' || $clockStyle === 'stack') : ?>
        #mp-countdown-timer-<?= /* @noEscape */ $timerId ?> .mp-countdown-clock {
            background-color: <?= /* @noEscape */ $clockBackgroundColor ?>;
            border-color: <?= /* @noEscape */ '#cccccc' ?>;
        }
        <?php endif; ?>
        <?php if ($clockStyle === 'modern') : ?>
        #mp-countdown-timer-<?= /* @noEscape */ $timerId ?> .countdown-modern {
            background: <?= /* @noEscape */ $clockBackgroundColor ?>;
            border-color: <?= /* @noEscape */ $clockBackgroundColor ?>;
        }
        <?php endif; ?>
    </style>

    <script type="text/x-magento-init">
    {
        "#mp-countdown-timer-<?= /* @noEscape */$timerId ?>": {
            "Mageplaza_BetterMaintenance/js/clock/mpcountdowntimer": {
                "timer_id": "#mp-countdown-timer-<?= /* @noEscape */ $timerId ?>",
                "timezone": "<?= /* @noEscape */ $block->getTimeZone() ?>",
                "endTime": "<?= /* @noEscape */ $block->getEndTime() ?>",
                "currentTime": "<?= /* @noEscape */ $block->getCurrentTime() ?>",
                "baseUrl": "<?= /* @noEscape */ $block->getBaseUrl() ?>",
                "autoSwitch": <?= /* @noEscape */ $block->getAutoSwitch() ?>
            }
        }
    }
    </script>
<?php endif; ?>
